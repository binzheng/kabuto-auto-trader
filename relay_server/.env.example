# Kabuto Relay Server - Environment Variables
# Copy this file to .env and fill in your values

# Security
WEBHOOK_SECRET=your-webhook-secret-here
API_KEY=your-api-key-here
ADMIN_PASSWORD=your-admin-password-here

# Database
DATABASE_URL=sqlite:///./data/kabuto.db
# For PostgreSQL: postgresql://user:password@localhost/kabuto

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_DEBUG=false

# Alerts (Optional)
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_RECIPIENTS=
